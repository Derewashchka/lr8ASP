@model IEnumerable<lr8.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Product List</h1>

        <h2>List View</h2>
        <ul>
            @foreach (var product in Model)
            {
                <li>@product.ID. @product.Name - @product.Price$ (@product.CreatedDate.ToString("dd/MM/yyyy"))</li>
            }
        </ul>

        <h2>Table View</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price ($)</th>
                    <th>Created Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ID</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.CreatedDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
